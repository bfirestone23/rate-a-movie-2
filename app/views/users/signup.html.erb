<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div><br>

    <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </div><br>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div><br>

    <%= f.submit %>
<% end %>