<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>

    <ul>
    <% @user.errors.messages_for("signup").each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %> 

<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div><br>

    <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </div><br>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div><br>

    <%= f.submit %>
<% end %>